<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Ebook.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root"
    Title="История">

    <CollectionView
        Margin="12"
        ItemsSource="{Binding History}"
        SelectionMode="None">

        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="1" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate>

                <Frame
                    Padding="12"
                    Margin="8"
                    BackgroundColor="White"
                    CornerRadius="16"
                    HasShadow="True">

                    <VerticalStackLayout Spacing="10">

                        <!-- Обложка -->
                        <Image
                            HeightRequest="160"
                            Aspect="AspectFit"
                            Source="{Binding CoverImage}" />

                        <!-- Название -->
                        <Label
                            Text="{Binding Title}"
                            FontSize="16"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center" />

                        <!-- Прогресс -->
                        <Grid ColumnDefinitions="*,Auto">
                            <ProgressBar
                                Grid.Column="0"
                                Progress="{Binding Progress}"
                                HeightRequest="6" />

                            <Label
                                Grid.Column="1"
                                Text="{Binding Progress, StringFormat='{0:P0}'}"
                                FontSize="12"
                                TextColor="#666"
                                Margin="8,0,0,0" />
                        </Grid>

                        <Label
                            Text="{Binding LastOpened, StringFormat='Открыто: {0:dd.MM.yyyy HH:mm}'}"
                            FontSize="12"
                            TextColor="#666"
                            HorizontalTextAlignment="Center" />

                        <HorizontalStackLayout Spacing="6" HorizontalOptions="Center">

                            <Label Text="★" FontSize="28"
           TextColor="{Binding Rating, Converter={StaticResource RatingColorConverter}, ConverterParameter=1}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer 
                Command="{Binding BindingContext.SetRatingCommand, Source={x:Reference Root}}"
                CommandParameter="{Binding ., Converter={StaticResource BookAndRatingConverter}, ConverterParameter=1}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label Text="★" FontSize="28"
           TextColor="{Binding Rating, Converter={StaticResource RatingColorConverter}, ConverterParameter=2}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer 
                Command="{Binding BindingContext.SetRatingCommand, Source={x:Reference Root}}"
                CommandParameter="{Binding ., Converter={StaticResource BookAndRatingConverter}, ConverterParameter=2}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label Text="★" FontSize="28"
           TextColor="{Binding Rating, Converter={StaticResource RatingColorConverter}, ConverterParameter=3}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer 
                Command="{Binding BindingContext.SetRatingCommand, Source={x:Reference Root}}"
                CommandParameter="{Binding ., Converter={StaticResource BookAndRatingConverter}, ConverterParameter=3}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label Text="★" FontSize="28"
           TextColor="{Binding Rating, Converter={StaticResource RatingColorConverter}, ConverterParameter=4}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer 
                Command="{Binding BindingContext.SetRatingCommand, Source={x:Reference Root}}"
                CommandParameter="{Binding ., Converter={StaticResource BookAndRatingConverter}, ConverterParameter=4}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label Text="★" FontSize="28"
           TextColor="{Binding Rating, Converter={StaticResource RatingColorConverter}, ConverterParameter=5}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer 
                Command="{Binding BindingContext.SetRatingCommand, Source={x:Reference Root}}"
                CommandParameter="{Binding ., Converter={StaticResource BookAndRatingConverter}, ConverterParameter=5}" />
                                </Label.GestureRecognizers>
                            </Label>

                        </HorizontalStackLayout>

                        <Button
                            Text="Читать"
                            HeightRequest="40"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            CornerRadius="12"
                            Command="{Binding BindingContext.OpenBookCommand, Source={x:Reference Root}}"
                            CommandParameter="{Binding .}" />

                    </VerticalStackLayout>
                </Frame>

            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
