<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Ebook.Views.ImportPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Импорт книги">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Название книги" />
            <Entry Text="{Binding Title}" Placeholder="Введите название" />

            <Label Text="PDF файл" />
            <HorizontalStackLayout>
                <Entry
                    Text="{Binding FilePath}"
                    IsReadOnly="True"
                    HorizontalOptions="FillAndExpand"
                    Placeholder="Файл не выбран" />
                <Button Text="Выбрать" Command="{Binding PickFileCommand}" />
            </HorizontalStackLayout>

            <Label Text="Импорт по URL" />
            <Entry Text="{Binding Url}" Placeholder="https://..." />

            <Button Text="Импорт PDF" Command="{Binding ImportCommand}" />
            <Button Text="Импорт по URL" Command="{Binding ImportUrlCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
